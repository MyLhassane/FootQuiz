<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.hassan.footquiz.MainActivity"
    android:background="#190e0e">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:id="@+id/linearLayout"
        android:background="#fff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:weightSum="100"
            android:background="#a1a1a1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/txtPreviousPlayers"
                android:id="@+id/textView"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_weight="50"
                android:background="#34495e"
                android:textColor="#1abc9c"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/imageView"
                android:src="@drawable/roundedline"
                android:scaleType="fitXY"
                android:layout_weight="50" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:weightSum="75"
            android:id="@+id/layoutContent"
            android:measureWithLargestChild="false"
            android:longClickable="false"
            android:background="#3498db"
            android:layout_weight="50">


            <ListView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/listView" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:weightSum="100"
            android:background="#a1a1a1" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/imageView2"
                android:src="@drawable/roundedlinerotation"
                android:scaleType="fitXY"
                android:layout_weight="50" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="ADS"
                android:id="@+id/textView8"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_weight="50"
                android:background="#34495e"
                android:textColor="#1abc9c" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
